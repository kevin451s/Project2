<h1></h1>
<div id="photoShow">
  <h1>
    My Picture
  <h1>
    <%= image_tag @photo.image.url(:large) %>
    <br>
    <%= @photo.description %>
    <% if current_user == @photo.user %>
      <div class='photoShowButton'>
        <%= link_to 'Edit this Photo', edit_photo_path, class: 'btn btn-success' %>
      </div>
      <div class="photoShowButton">
        <%= link_to 'Delete this Photo', @photo, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
      </div>
    <% end %>
    <%= link_to 'All photos', photos_path, class: 'btn btn-primary' %>
</div>
